{
  "extends": ["@binance-academy/eslint-config-bnb", "plugin:mocha/recommended"],
  "env": {
    "es6": true,
    "mocha": true
  },
  "rules": {
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": [],
        "aspects": ["invalidHref", "preferButton"]
      }
    ],
    "jsx-a11y/label-has-associated-control": [
      2,
      {
        "assert": "either"
      }
    ],
    "mocha/no-mocha-arrows": 0
  }
}
